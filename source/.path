###############################################################################
# Path
###############################################################################
PATH=~/.dotfiles/bin

# OS X
if [[ "$OSTYPE" =~ ^darwin ]]; then
    PATH=$PATH:/usr/local/bin
    PATH=$PATH:/usr/local/sbin
    PATH=$PATH:/opt/local/bin
    PATH=$PATH:/opt/local/sbin
    PATH=$PATH:/usr/local/share/npm/bin
    PATH=$PATH:/usr/bin
    PATH=$PATH:/bin
    PATH=$PATH:/usr/sbin
    PATH=$PATH:/sbin
    PATH=$PATH:~/.rbenv/versions/1.9.3-p194/bin
    PATH=$PATH:~/Tools/mysql-diff/bin
    if [[ "$(type -P brew)" ]]; then
        # FIXME: The ln command is missing the -h paramater that the Homebrew Cask install uses for linking
        #PATH=$PATH:$(brew --prefix coreutils)/libexec/gnubin
        PATH=$PATH:$(brew --prefix)/share/python

        # Manpages path
        #MANPATH=$(brew --prefix coreutils)/libexec/gnuman:$MANPATH
        #export MANPATH
    fi

# Ubuntu
elif [[ "$(/bin/cat /etc/issue 2> /dev/null)" =~ Ubuntu ]]; then
    PATH=$PATH:~/.rbenv/shims
#    PATH=$PATH:~/.nave/installed/0.10.6/bin
    PATH=$PATH:/usr/lib/lightdm/lightdm
    PATH=$PATH:/usr/local/sbin
    PATH=$PATH:/usr/local/bin
    PATH=$PATH:/usr/sbin
    PATH=$PATH:/usr/bin
    PATH=$PATH:/sbin
    PATH=$PATH:/bin
    PATH=$PATH:/usr/games
    PATH=$PATH:/usr/local/games
    PATH=$PATH:~/local/bin
    PATH=$PATH:~/Tools/mysql-diff/bin
fi

export PATH
